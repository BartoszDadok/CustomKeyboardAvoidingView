{
  "expo": {
    "name": "KeyboardAvoidingView",
    "slug": "keyboard-avoiding-view",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#000000"
    },
    "backgroundColor": "#000000",
    "ios": {
      "buildNumber": "1",
      "supportsTablet": false,
      "bundleIdentifier": "com.bd.keyboardavoidingview"
    },
    "android": {
      "versionCode": 1,
       "softwareKeyboardLayoutMode" : "adjustNothing",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.bd.keyboardavoidingview"
    },
    "androidNavigationBar": {
      "visible": true,
      "barStyle": "light-content"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/NunitoSans-Light.ttf",
            "./assets/fonts/NunitoSans-Regular.ttf",
            "./assets/fonts/NunitoSans-Bold.ttf",
            "./assets/fonts/NunitoSans-ExtraBold.ttf"
          ]
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "b6f31d6a-b7f9-41f6-907e-82373f997b88"
      }
    }
  }
}
